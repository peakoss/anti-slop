# @github/local-action Variables

# ─── Action Inputs ───

# Format: INPUT_<NAME> (all uppercase, keep hyphens as-is)
# Inputs with defaults in action.yaml don't need to be set here

# Repo Auth Token
INPUT_GITHUB-TOKEN=

# General Settings
INPUT_MAX-FAILURES=3

# PR Branch Checks
INPUT_ALLOWED-TARGET-BRANCHES=
INPUT_BLOCKED-TARGET-BRANCHES=
INPUT_ALLOWED-SOURCE-BRANCHES=
INPUT_BLOCKED-SOURCE-BRANCHES="main
master"

# PR Quality Checks
INPUT_MAX-NEGATIVE-REACTIONS=0
INPUT_REQUIRE-MAINTAINER-CAN-MODIFY=true

# PR Title Checks
INPUT_REQUIRE-CONVENTIONAL-TITLE=false

# PR Description Checks
INPUT_REQUIRE-DESCRIPTION=true
INPUT_MAX-DESCRIPTION-LENGTH=0
INPUT_MAX-EMOJI-COUNT=2
INPUT_REQUIRE-PR-TEMPLATE=false
INPUT_REQUIRE-LINKED-ISSUE=false
INPUT_BLOCKED-TERMS=Generated with Claude Code
INPUT_BLOCKED-ISSUE-NUMBERS=123

# Commit Message Checks
INPUT_REQUIRE-CONVENTIONAL-COMMITS=false
INPUT_BLOCKED-COMMIT-AUTHORS=

# File Checks
INPUT_ALLOWED-FILE-EXTENSIONS=
INPUT_ALLOWED-PATHS=
INPUT_BLOCKED-PATHS="README.md
SECURITY.md
LICENSE
CODE_OF_CONDUCT.md"
INPUT_REQUIRE-FINAL-NEWLINE=true

# User Health Checks
INPUT_MIN-REPO-MERGED-PRS=0
INPUT_MIN-REPO-MERGE-RATIO=0
INPUT_MIN-GLOBAL-MERGE-RATIO=30
INPUT_GLOBAL-MERGE-RATIO-EXCLUDE-OWN=false
INPUT_MIN-ACCOUNT-AGE=7

# Exemptions
INPUT_EXEMPT-DRAFT-PRS=false
INPUT_EXEMPT-BOTS="actions-user
dependabot[bot]
renovate[bot]
github-actions[bot]"
INPUT_EXEMPT-USERS=
INPUT_EXEMPT-AUTHOR-ASSOCIATION=OWNER,MEMBER,COLLABORATOR
INPUT_EXEMPT-LABEL=exempt
INPUT_EXEMPT-PR-LABEL=
INPUT_EXEMPT-ALL-MILESTONES=false
INPUT_EXEMPT-ALL-PR-MILESTONES=false
INPUT_EXEMPT-MILESTONES=
INPUT_EXEMPT-PR-MILESTONES=

# PR Success Actions
INPUT_SUCCESS-ADD-PR-LABELS=

# PR Failure Actions
INPUT_CLOSE-PR=true
INPUT_LOCK-PR=false
INPUT_DELETE-BRANCH=false
INPUT_FAILURE-PR-MESSAGE=
INPUT_FAILURE-REMOVE-PR-LABELS=
INPUT_FAILURE-REMOVE-ALL-PR-LABELS=false
INPUT_FAILURE-ADD-PR-LABELS=


# ─── Workflow Configuration ───

# Owner and repository name (e.g. "owner/repo"). Required when using github.context.repo.
GITHUB_REPOSITORY=peakoss/anti-slop

# Name of the event that triggered the workflow (e.g. workflow_dispatch, pull_request)
GITHUB_EVENT_NAME=

# Path to the file containing a full event webhook payload
GITHUB_EVENT_PATH=tests/fixtures/event.json

# Path to the file containing the summary of the workflow run.
GITHUB_STEP_SUMMARY=tests/summary.html

# Fully-formed ref of the branch or tag that triggered the workflow run (e.g. refs/heads/feature-branch-1)
# GITHUB_REF=

# Short ref name of the branch or tag that triggered the workflow run (e.g. feature-branch-1)
# GITHUB_REF_NAME=

# Type of ref that triggered the workflow run (e.g. branch or tag)
# GITHUB_REF_TYPE=

# Target branch of a pull_request or pull_request_target event (e.g. main)
# GITHUB_BASE_REF=

# Source branch of a pull_request or pull_request_target event (e.g. feature-branch-1)
# GITHUB_HEAD_REF=

# Always true when GitHub Actions is running the workflow. This is used to differentiate local vs GitHub Actions runs.
GITHUB_ACTIONS=false

# Always true
CI=true

# Enable step debug logging
ACTIONS_STEP_DEBUG=true


# ─── Runner Configuration ───

# Runner name
RUNNER_NAME="Local Action"

# Runner environment: github-hosted, self-hosted
RUNNER_ENVIRONMENT="github-hosted"

# Runner OS: Linux, Windows, macOS
# RUNNER_OS=

# Runner architecture: X86, X64, ARM, ARM64
# RUNNER_ARCH=

# Path to a temporary directory, emptied at start and end of each job
# RUNNER_TEMP=

# Set to 1 when debug logging is enabled which can be useful for additional debugging logging.
RUNNER_DEBUG=1


# ─── Local Action Configuration ───

# Local workspace root used for any files created by your action as well as any environment files that are created automatically. Required if action uses @actions/artifact or @actions/cache.
LOCAL_ACTION_WORKSPACE=

# Local path where artifacts will be saved. Required if action uses @actions/artifact.
LOCAL_ACTION_ARTIFACT_PATH=

# Local path where caches will be read or saved. Required if action uses @actions/cache.
LOCAL_ACTION_CACHE_PATH=

# Default working directory and repo checkout location when using the checkout action.
# GITHUB_WORKSPACE=


# ─── GitHub URL Configuration ───

# GitHub API URL
GITHUB_API_URL=https://api.github.com

# GitHub server URL
GITHUB_SERVER_URL=https://github.com
